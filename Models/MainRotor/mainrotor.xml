<?xml version="1.0" encoding="ISO-8859-1"?>

<PropertyList>

  <path>mainrotor.ac</path>

  <animation>
    <object-name>rotor</object-name>
    <object-name>rotorup</object-name>
  </animation>

  <!-- Blades -->
  <model>
    <name>Blade1</name>
    <path>Aircraft/Dauphin/Models/MainRotor/blade1.xml</path>
    <offsets>
      <z-m> 0.100 </z-m>
    </offsets>
  </model>

  <model>
    <name>Blade2</name>
    <path>Aircraft/Dauphin/Models/MainRotor/blade2.xml</path>
    <offsets>
      <z-m> 0.100 </z-m>
      <heading-deg> 90 </heading-deg>
    </offsets>
  </model>

  <model>
    <name>Blade3</name>
    <path>Aircraft/Dauphin/Models/MainRotor/blade3.xml</path>
    <offsets>
      <z-m> 0.100 </z-m>
      <heading-deg> 180 </heading-deg>
    </offsets>
  </model>

  <model>
    <name>Blade3</name>
    <path>Aircraft/Dauphin/Models/MainRotor/blade4.xml</path>
    <offsets>
      <z-m> 0.100 </z-m>
      <heading-deg> 270 </heading-deg>
    </offsets>
  </model>

  <animation>
    <name>rotorcomplet</name>
    <object-name>rotor</object-name>
    <object-name>rotorup</object-name>
    <object-name>Blade1</object-name>
    <object-name>Blade2</object-name>
    <object-name>Blade3</object-name>
    <object-name>Blade4</object-name>
  </animation>

  <!-- Rotation du rotor -->
  <animation>
    <type>rotate</type>
    <object-name>rotorcomplet</object-name>
    <property>rotors/main/blade[0]/position-deg</property>
    <factor>-1</factor>
    <axis>
      <x>  0 </x>
      <y>  0 </y>
      <z>  1 </z>
    </axis>
  </animation>

</PropertyList>
