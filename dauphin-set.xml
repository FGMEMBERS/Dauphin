<?xml version="1.0"?>
<!--
************************************************************************
Dauphin simulation config.

************************************************************************
-->

<PropertyList>

  <sim include="Nasal/views.xml">

    <description>Dauphin (Yasim)</description>
    <author>BARANGER Emmanuel (3D), Reagan Thomas, Maik Justus (FDM)</author>
    <status>alpha</status>
    <license>GPL v2</license>

    <flight-model>yasim</flight-model>
    <aero>dauphin</aero>
    <fuel-fraction>0.8</fuel-fraction>

    <startup>
      <splash-texture>Aircraft/Dauphin/dauphin-splash.png</splash-texture>
    </startup> 

    <sound>
      <path>Aircraft/Dauphin/Sounds/dauphin-sound.xml</path>
    </sound>

    <model>
      <path archive="y">Aircraft/Dauphin/Models/dauphin.xml</path>
      <dauphin>
        <state type="int">0</state>
        <engine type="float">0.0</engine>
        <rotor-step-deg type="float">-1.0</rotor-step-deg>

        <hide-gsdi>true</hide-gsdi>
        <binocular_standart type="bool">true</binocular_standart>
        <binocular_tri type="bool">false</binocular_tri>
        <winch>false</winch>
        <mirror>false</mirror>
        <wirecutter_skid>false</wirecutter_skid>
        <wirecutter_up>false</wirecutter_up>
      </dauphin>
    </model>

    <help>
      <title>Dauphin - background and help</title>
      <line></line>
      <key>
        <name>d</name>
        <desc>Left door</desc>
      </key>
      <key>
        <name>D</name>
        <desc>Left windows</desc>
      </key>
    </help>

  </sim>

  <controls>
    <engines>
      <engine n="0">
        <magnetos>0</magnetos>
      </engine>
    </engines>
    <gear>
      <brake-parking>1</brake-parking>
    </gear>
    <rotor>
      <reltarget>1</reltarget>
      <maxreltorque>1</maxreltorque>
    </rotor>
  </controls>

  <instrumentation>
    <gsdi>
      <serviceable type="bool">true</serviceable>
      <enabled type="bool">true</enabled>
    </gsdi>
  </instrumentation>

  <input>
    <keyboard include="Nasal/dauphin-keyboard.xml"/>
  </input>

  <nasal>
    <dauphin>
      <file>Aircraft/Dauphin/Nasal/doors.nas</file>
      <file>Aircraft/Dauphin/Nasal/hsi.nas</file>
      <file>Aircraft/Dauphin/Nasal/fcs.nas</file>
      <file>Aircraft/Dauphin/Nasal/dauphin.nas</file>
    </dauphin>
  </nasal>

  <rotors>
    <main>
      <rpm type="double">0</rpm>
      <cone-deg type="double">0</cone-deg>
      <cone1-deg type="double">0</cone1-deg>
      <cone2-deg type="double">0</cone2-deg>
      <cone3-deg type="double">0</cone3-deg>
      <cone4-deg type="double">0</cone4-deg>
    </main>
  </rotors>

</PropertyList>

